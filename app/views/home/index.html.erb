<div class="">
  <h2>US Title Series Home Page</h2>

  <div class="recent-news-band">
    <div class="container">
      <h3>Recent News</h3>
      <div class="row">
        <% @recent_news.each do |news| %>
          <div class="col-md-4">
            <div class="news-tile-home">
              <h4><%= link_to news.title, news_path(news), class: 'news-title' %></h4>
              <p class="news-date"><%= news_date(news.created_at) %></p>
              <p class="news-snippet"><%#= news.content %><p>
              <p class="news-author">
                <%= image_tag(news.author.image, class: "blog-avatar") %>
                By <%= news.author.first_name %> <%= news.author.last_name %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
