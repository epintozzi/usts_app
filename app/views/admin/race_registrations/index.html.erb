<div class="container">
  <h2 class="page-title">Manage Race Registrations</h2>
  <%= link_to "Export Race Registrations", root_path, class: 'btn btn-solid-red' %>
  <div class="race-registration-list">
    <% @race_registrations.each do |reg| %>
    <p>
      <%= link_to "Edit Registration", edit_admin_race_registration_path(reg), class: "small-link" %>
      <%= reg.race.city %>, <%= reg.race.state %>: <%= reg.usts_registration.first_name %> <%= reg.usts_registration.last_name %> - <%= reg.boat_class.class_name %>
    </p>
    <% end %>
  </div>

</div>
