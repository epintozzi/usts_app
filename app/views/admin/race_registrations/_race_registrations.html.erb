<p>
  <%= link_to "View", admin_race_registration_path(reg), class: "small-link" %>
  <% if reg.race.future? %>
    <%= link_to "Edit", edit_admin_race_registration_path(reg), class: "small-link" %>
    <%= link_to "Delete", admin_race_registration_path(reg), method: "delete", class: "small-link", data: {confirm: "Are you sure you want to delete this registration?"} %>
  <% end %>
  <%= reg.race.city %>, <%= reg.race.state %>: <%= reg.usts_registration.first_name %> <%= reg.usts_registration.last_name %> - <%= reg.boat_class.class_name %>
</p>
