<%= form_for [:admin, @user], html: {class: "form-group"} do |f| %>
  <div class="field">
    <%= f.label :first_name, class: 'required' %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: 'required' %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'required' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :role %>
    <%= f.select :role, User.roles.keys.to_a, {prompt: "Select Role"}, class: 'form-control' %>
  </div>

  <div class="action">
    <%= f.submit class: "btn btn-solid-red"%>
  </div>

<% end %>
