<%= render partial: 'admin/shared/admin_header' %>

  <h2 class="page-title">Manage USTS Registrations</h2>
  <%= link_to "Export USTS Registrations", admin_usts_registrations_path(format: "csv"), class: 'btn btn-solid-red' %>

  <%= form_tag import_admin_usts_registrations_path, multipart: true do %>
  <%= label_tag "Import USTS Registrations" %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import Registrations", class: 'btn btn-outline-red' %>
  <% end %>

  <div class="usts-registration-list">
    <% @usts_registrations.each do |reg| %>
    <p>
      <%= link_to "View", admin_usts_registration_path(reg), class: "small-link" %>
      <%= link_to "Edit", edit_admin_usts_registration_path(reg), class: "small-link" %>
      <%= link_to "Delete", admin_usts_registration_path(reg), method: "delete", class: "small-link", data: {confirm: "Are you sure you want to delete this registration?"} %>
      <%= reg.race_year %>: <%= reg.first_name %> <%= reg.last_name %> - <%= reg.membership_type %>
    </p>
    <% end %>
  </div>
</div>
</div>
