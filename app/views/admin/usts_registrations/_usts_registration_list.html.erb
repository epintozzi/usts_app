<div class="usts-registration-list">
  <div class="col-md-4">
    <h4>Paid Registrations</h4>
    <% @usts_registrations.where(race_year: default_year).paid.each do |reg| %>
    <p>
      <%= link_to "View", admin_usts_registration_path(reg), class: "small-link" %>
      <%= link_to "Edit", edit_admin_usts_registration_path(reg), class: "small-link" %>
      <%= link_to "Delete", admin_usts_registration_path(reg), method: "delete", class: "small-link", data: {confirm: "Are you sure you want to delete this registration?"} %>
      <%= reg.race_year %>: <%= reg.first_name %> <%= reg.last_name %> - <%= reg.membership_type %>
    </p>
    <% end %>
  </div>
  <div class="col-md-4">
    <h4>Unpaid Registrations</h4>
    <% @usts_registrations.where(race_year: default_year).unpaid.each do |reg| %>
    <p>
      <%= link_to "View", admin_usts_registration_path(reg), class: "small-link" %>
      <%= link_to "Edit", edit_admin_usts_registration_path(reg), class: "small-link" %>
      <%= link_to "Delete", admin_usts_registration_path(reg), method: "delete", class: "small-link", data: {confirm: "Are you sure you want to delete this registration?"} %>
      <%= reg.race_year %>: <%= reg.first_name %> <%= reg.last_name %> - <%= reg.membership_type %>
    </p>
    <% end %>
  </div>
</div>
