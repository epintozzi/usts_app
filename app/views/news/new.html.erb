<div class="container">

  <%= form_for @news do |f| %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <div class="">
      <%= f.submit class: "btn btn-success" %>
    </div>

  <% end %>

</div>
