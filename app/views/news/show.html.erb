<div class="container">
  <div class="basic-page">
    <%= link_to "Back to All News", news_index_path %>

    <h2 class="article-title"> <%= @news.title %> </h2>

    <div class="row">
      <div class="col-md-2">
        <div class="detail-author">
          <p class="news-author">
            <%= image_tag(@news.author.image.url(:thumb), class: "blog-avatar") %>
            By <%= @news.author.first_name %> <%= @news.author.last_name %><br>
          </p>
          <p class="news-date"><%= news_date(@news.published_on) %></p>
        </div>
        <% if current_user && (current_user.admin? || current_user.editor?) %>
          <%= link_to "Edit", edit_news_path(@news), class: 'btn btn-outline-red' %>
        <% end %>
      </div>

      <div class="col-md-8">
        <p class="article-content"><%= simple_format(@news.content, class: 'article-content') %></p>
      </div>

      <div class="col-md-2">
      </div>
    </div>
  </div>
</div>
