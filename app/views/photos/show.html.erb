<div class="container">

  <%= link_to "Back to Gallery", gallery_path(@photo.gallery) %>

  <%= image_tag(@photo.image.url(:original), class: "gallery-photo-medium") %>
  <p class="caption">
    <% if !@photo.caption.blank? %>
      <%= @photo.caption  %> |
    <% end %>
    <% if !@photo.photographer.blank? %>
      Photographer: <%= @photo.photographer  %>
    <% end %>
  </p>

</div>
